<?xml version="1.0" encoding="utf-8"?>
<!-- Custom ExoPlayer controls with Quality button for Android TV -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:gravity="bottom"
    android:paddingBottom="24dp">

    <!-- Time bar (progress bar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingEnd="16dp" />

        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:played_color="#FF5722"
            app:scrubber_color="#FF5722"
            app:buffered_color="#80FFFFFF"
            app:unplayed_color="#40FFFFFF" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingStart="16dp" />

    </LinearLayout>

    <!-- Control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="48dp"
        android:paddingEnd="48dp">

        <!-- Quality button -->
        <ImageButton
            android:id="@+id/quality_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Quality"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:layout_marginEnd="32dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Rewind button -->
        <ImageButton
            android:id="@id/exo_rew"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/exo_icon_rewind"
            android:contentDescription="Rewind 15s"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Play/Pause button -->
        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Fast forward button -->
        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/exo_icon_fastforward"
            android:contentDescription="Forward 30s"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

    <!-- Title info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/exo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>
